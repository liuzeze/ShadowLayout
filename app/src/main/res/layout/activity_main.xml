<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:orientation="vertical">

        <com.lz.shodowview.ShadowLayout
            android:id="@+id/ShadowLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            app:sl_selectBackgroundColor="#ff0000"
            app:sl_cornerRadius="29dp"
            app:sl_strokeColor="#0000ff"
            app:sl_offsetX="0dp"
            app:sl_offsetY="5dp"
            app:sl_shadowBlur="10dp"
            app:sl_selectShadowColor="#55ff0000">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="阴影"
                android:textColor="#000" />
        </com.lz.shodowview.ShadowLayout>

        <com.lz.shodowview.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:sl_cornerRadius="29dp"
            app:sl_backgroundColor="@color/colorAccent"
            app:sl_offsetX="0dp"
            app:sl_offsetY="5dp"
            app:sl_shadowBlur="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="阴影"
                android:textColor="#000" />
        </com.lz.shodowview.ShadowLayout>

        <com.lz.shodowview.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:padding="10dp"
            app:sl_selectBackgroundColor="#ff0000"
            app:sl_cornerRadius="29dp"
            app:sl_shadowColor="#0000ff"
            app:sl_strokeColor="#550000ff"
            app:sl_offsetX="0dp"
            app:sl_offsetY="5dp"
            app:sl_shadowBlur="10dp"
            app:sl_selectShadowColor="#55ff0000">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="阴影"
                android:textColor="#000" />
        </com.lz.shodowview.ShadowLayout>

        <com.lz.shodowview.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:padding="10dp"
            app:sl_selectBackgroundColor="#ff0000"
            app:sl_cornerRadius="29dp"
            app:sl_backgroundColor="#0000ff"
            app:sl_shadowColor="#550000ff"
            app:sl_offsetX="0dp"
            app:sl_offsetY="5dp"
            app:sl_shadowBlur="10dp"
            app:sl_selectShadowColor="#55ff0000">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="阴影"
                android:textColor="#fff" />
        </com.lz.shodowview.ShadowLayout>

        <com.lz.shodowview.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:padding="10dp"
            app:sl_selectBackgroundColor="#ff0000"
            app:sl_cornerRadius="19dp"
            app:sl_shadowColor="#992590fd"
            app:sl_offsetX="0dp"
            app:sl_offsetY="5dp"
            app:sl_shadowBlur="10dp"
            app:sl_selectShadowColor="#55ff0000">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_launcher_background"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000" />
        </com.lz.shodowview.ShadowLayout>

        <com.lz.shodowview.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            app:sl_cornerRadius="29dp"
            app:sl_backgroundColor="#ff0000"
            app:sl_shadowColor="#55ff0000"
            app:sl_offsetX="0dp"
            app:sl_offsetY="5dp"
            app:sl_shadowBlur="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="阴影"
                android:textColor="#000" />
        </com.lz.shodowview.ShadowLayout>

        <com.lz.shodowview.ShadowTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="TextView"
            android:textSize="25dp"
            app:sl_selectBackgroundColor="#ff0000"
            app:sl_cornerRadius="29dp"
            app:sl_shadowColor="#5500ff00"
            app:sl_strokeColor="#00ff00"
            app:sl_offsetX="0dp"
            app:sl_offsetY="5dp"
            app:sl_shadowBlur="10dp"
            app:sl_selectShadowColor="#55ff0000" />


    </LinearLayout>
</ScrollView>